% Parties

\newcommand{\partfont}{%
\usefont{T1}{phv}{m}{n}
\fontsize{32}{30}%
\selectfont}

\DeclareFixedFont{\partnumfont}{T1}{pbk}{bc}{n}{80}

\renewcommand\part%
{%
  \let\@font@warningORIG\@font@warning
  \renewcommand{\@font@warning}[1]{}
   \cleardoublepage
  \thispagestyle{empty}% la place de plain par défaut
  \@tempswafalse
  \null\vfil
  \secdef\@part\@spart}

\def\@part[#1]#2{%
    \ifnum \c@secnumdepth >-2\relax
      \refstepcounter{part}%
      \addcontentsline{toc}{part}{\thepart\hspace{1em}#1}%
    \else
      \addcontentsline{toc}{part}{#1}%
    \fi
    \markboth{}{}%
    {\centering
     \interlinepenalty \@M
     \normalfont
     \ifnum \c@secnumdepth >-2\relax
       \partnumfont \thepart % modif font
       \par
       \vskip 50\p@% 50 au lieu de 20...
     \fi
     \partfont #2\par}% modif font
    \@endpart%
  \let\@font@warning\@font@warningORIG}

  
% En-tête
\newcommand{\entetefont}{%
\usefont{T1}{phv}{m}{n}
}

\addtolength{\headheight}{4pt} % augmenter légèrement l'entête
                               % pour les overfull vbox
\pagestyle{fancy}

\renewcommand{\sectionmark}[1]{\markright{%
    \sectionfont
   \small \thesection ~#1}}
\renewcommand{\chaptermark}[1]{\markboth{%
   \small \sectionfont #1}{}}

% les entêtes du document par défaut
\fancyhead[LE,RO]{\entetefont \thepage}
\fancyhead[LO]{\rightmark}
\fancyhead[RE]{\leftmark}

% les premières pages de chapitre
\fancypagestyle{plain}{%
  \fancyhf{}
  \if@frontmatter% introduction
     \fancyfoot[C]{\textsc{\entetefont \thepage}}
  \else
    \fancyfoot[C]{\textsc{\entetefont \thepage}}
  \fi
 \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
}

% les trois parties (front, main et back)
\newif\if@frontmatter 

\renewcommand\frontmatter{%
  \cleardoublepage
  \setcounter{chapitre}{1}
  \@frontmattertrue
  \@mainmatterfalse
  \pagenumbering{roman}
  % page dans l'index en petite capitale
  \let\indexORI\index
  \renewcommand{\index}[1]{\indexORI{##1|textsc}}
  \fancyfoot{}
  \fancyhead[LE,RO]{\textsc{\entetefont \thepage}}
  \fancyhead[LO]{\rightmark}
  \fancyhead[RE]{\leftmark}
}

\renewcommand\mainmatter{%
  \cleardoublepage
  \@mainmattertrue
  \@frontmatterfalse
  \pagenumbering{arabic}
  \let\index\indexORI
  \fancyfoot{}
  \fancyhead[LE]{\entetefont \thepage}
  \fancyhead[RO]{\entetefont \thepage}
  \fancyhead[LO]{\entetefont \rightmark}
  \fancyhead[RE]{\entetefont \leftmark}}

\renewcommand\backmatter{%
  \cleardoublepage
  \@mainmatterfalse
  \@frontmatterfalse
  \fancyfoot{}
  \fancyhead[LE]{\entetefont \thepage}
  \fancyhead[RO]{\entetefont \thepage}
  \fancyhead[LO]{\entetefont \rightmark}
  \fancyhead[RE]{\entetefont \leftmark}
 % \renewcommand{\toclevel@chapter}{-1}% pour avoir le bookmark au même niveau que part
}


